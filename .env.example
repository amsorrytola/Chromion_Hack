# Cross-Chain AI Dungeon Crawler - Environment Variables
# Copy this file to .env and fill in your values

# ======================
# Blockchain Configuration
# ======================
PRIVATE_KEY=your_private_key_here
INFURA_API_KEY=your_infura_api_key
ALCHEMY_API_KEY=your_alchemy_api_key

# ======================
# Chainlink Configuration
# ======================
VRF_SUBSCRIPTION_ID=your_vrf_subscription_id
CHAINLINK_VRF_COORDINATOR=your_vrf_coordinator_address
FUNCTIONS_ROUTER=your_functions_router_address
CHAINLINK_CCIP_ROUTER=your_ccip_router_address

# ======================
# Database Configuration
# ======================
DATABASE_URL=postgresql://username:password@localhost:5432/dungeon_crawler
REDIS_URL=redis://localhost:6379

# ======================
# ElizaOS AI Configuration
# ======================
ELIZAOS_API_KEY=your_elizaos_api_key
ELIZAOS_ENDPOINT=https://api.elizaos.com

# ======================
# Frontend Configuration
# ======================
VITE_API_URL=http://localhost:3001
VITE_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id
VITE_ALCHEMY_API_KEY=your_alchemy_api_key

# ======================
# Security Configuration
# ======================
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:5173

# ======================
# External Services
# ======================
IPFS_GATEWAY=https://gateway.pinata.cloud
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# ======================
# Development Configuration
# ======================
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# ======================
# Production Configuration
# ======================
# NODE_ENV=production
# PORT=8080
# LOG_LEVEL=info
