{
  "name": "@chaniiii/contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Cross-Chain AI Dungeon Crawler",
  "private": true,
  "scripts": {
    "build": "forge build",
    "test": "forge test -vvv",
    "test:gas": "forge test --gas-report",
    "coverage": "forge coverage",
    "clean": "forge clean",
    "dev": "forge test --watch",
    "format": "forge fmt",
    "lint": "forge fmt --check",
    "deploy:sepolia": "forge script script/DeployContracts.s.sol --rpc-url sepolia --broadcast --verify",
    "deploy:mumbai": "forge script script/DeployContracts.s.sol --rpc-url polygon_mumbai --broadcast --verify",
    "deploy:arbitrum": "forge script script/DeployContracts.s.sol --rpc-url arbitrum_goerli --broadcast --verify",
    "verify:sepolia": "forge verify-contract --chain sepolia --watch",
    "verify:mumbai": "forge verify-contract --chain polygon_mumbai --watch",
    "simulate:sepolia": "forge script script/DeployContracts.s.sol --rpc-url sepolia",
    "simulate:mumbai": "forge script script/DeployContracts.s.sol --rpc-url polygon_mumbai",
    "install:libs": "forge install",
    "update:libs": "forge update"
  },
  "dependencies": {},
  "devDependencies": {},
  "keywords": [
    "solidity",
    "smart-contracts",
    "blockchain",
    "chainlink",
    "cross-chain",
    "foundry"
  ]
}
